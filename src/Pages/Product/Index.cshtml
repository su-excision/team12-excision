@page
@model ContosoCrafts.WebSite.Pages.Product.IndexModel
@{
    ViewData["Title"] = "Index page";
}

<small class="create-button">
    <small class="create-button-container">
        <small class="create-button-container">
            <a href="Product/Create" class="create-button">Create a New Card</a>
        </small>
    </small>
</small>
<div class="products-container">
    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>Name</th>
                <th>Title</th>
                <th>Action</th>
                <th>Update</th>
                <th>Delete</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var product in Model.Products)
            {
                <tr>
                    <td>@product.Name</td>
                    <td>@product.Description</td>
                    <td><a asp-page="Read" asp-route-id="@product.Id">Read</a></td>
                    <td><a asp-page="Update" asp-route-id="@product.Id">Update</a></td>
                    <td><a asp-page="Delete" asp-route-id="@product.Id">Delete</a></td>
                </tr>
            }
        </tbody>
    </table>
</div>