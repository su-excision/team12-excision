@page
@model ContosoCrafts.WebSite.Pages.Battle.BattleModel
@{
    ViewData["Title"] = "Battle";
}

<script>
    document.addEventListener('DOMContentLoaded', function () {
        var audio = new Audio('/audio/pokemon-battle.mp3');
        audio.play();
    });
</script>

<div class="d-flex flex-column justify-content-center align-items-center bg-blur">
    <h1 class="page-title">@ViewData["Title"]</h1>

    <p>Pokémon Trainer, please select five Pokémon for battle!</p>

    <form method="post">
        @foreach (var pokemonCard in Model.PokemonGeneralCards)
        {
            <div>
                <input type="checkbox" name="SelectedPokemon" value="@pokemonCard.Id" id="pokemon_@pokemonCard.Id" />
                <label for="pokemon_@pokemonCard.Id">@pokemonCard.Name</label>
            </div>
        }

        <button type="submit">Start Battle</button>
    </form>
</div>