@page
@model PrivacyModel
@{
    ViewData["Title"] = "Privacy Policy";
}

<h1>@ViewData["Title"]</h1>

<!-- plays LevelUp audio clip when Privacy page loads -->
<script>
    document.addEventListener('DOMContentLoaded', function () {
        var audio = new Audio('/audio/LevelUpSound.mp3');
        audio.play();
    });
</script>

<p> 
    At Excision, we prioritize your privacy! Rest assured, we do not gather any user information.
    Our trading card library is exclusively designed for learning purposes for the Master's in Computer Science program at Seattle University. 
    Explore our content with confidence, knowing that your privacy is protected :)
</p>
