@page
@model AboutUsModel
@{
    ViewData["Title"] = "About Us";
}
<div class="d-flex flex-column justify-content-center align-items-center bg-blur">
    <h1 class="page-title">@ViewData["Title"]</h1>

    <!-- plays ItemFound audio clip when About Us page loads -->
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            var audio = new Audio('/audio/ItemFound.mp3'); 
            audio.play();
        });
    </script>


    <div class="col-md-5 order-2 order-md-1">
        <div class="mt-5 mt-md-0">
            <span class="text-muted">Our Story</span>
            <h2 class="display-5 fw-bold">About Us</h2>
            <p class="lead">Welcome to Excision, the ultimate destination for trading card enthusiasts and collectors! #1 in trading card libraries.</p>
        </div>
    </div>
